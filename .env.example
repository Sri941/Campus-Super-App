# Campus Super-App Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/campus_superapp"
REDIS_URL="redis://localhost:6379"
MONGODB_URL="mongodb://localhost:27017/campus_logs"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_SECRET="your-refresh-token-secret"

# API Keys
OPENAI_API_KEY="sk-your-openai-api-key"
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# AWS Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="campus-superapp-storage"

# Twilio Configuration (SMS/Voice)
TWILIO_SID="your-twilio-account-sid"
TWILIO_TOKEN="your-twilio-auth-token"
TWILIO_PHONE="your-twilio-phone-number"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Firebase Configuration
FIREBASE_PROJECT_ID="campus-superapp"
FIREBASE_PRIVATE_KEY="your-firebase-private-key"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk@campus-superapp.iam.gserviceaccount.com"

# Application Configuration
NODE_ENV="development"
PORT="4000"
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:4000"

# Security Configuration
BCRYPT_ROUNDS="12"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="15"

# File Upload Configuration
MAX_FILE_SIZE="10485760"  # 10MB in bytes
UPLOAD_PATH="uploads/"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Payment Gateway (Future implementation)
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"

# Development Tools
PRISMA_STUDIO_PORT="5555"
DEBUG="campus:*"