{
  "name": "campus-super-app",
  "version": "2.1.0",
  "description": "Full-stack AI-powered campus management platform with 7+ integrated services",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "npm run start:backend",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "db:migrate": "cd backend && npx prisma migrate deploy",
    "db:seed": "cd backend && npx prisma db seed",
    "db:studio": "cd backend && npx prisma studio",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "deploy:staging": "npm run build && npm run deploy:aws:staging",
    "deploy:prod": "npm run build && npm run deploy:aws:prod"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/campus-super-app.git"
  },
  "keywords": [
    "campus",
    "management",
    "ai",
    "full-stack",
    "react",
    "node.js",
    "postgresql",
    "microservices",
    "real-time",
    "education"
  ],
  "author": "Campus Super-App Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/campus-super-app/issues"
  },
  "homepage": "https://github.com/yourusername/campus-super-app#readme",
  "workspaces": [
    "frontend",
    "backend",
    "mobile",
    "shared"
  ],
  "devDependencies": {
    "concurrently": "^7.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}